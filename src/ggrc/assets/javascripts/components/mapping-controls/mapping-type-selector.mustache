<select {{#disabled}}disabled{{/disabled}}
        class="input-block-level"
        can-value="selectedType"
        name="type-select">
  {{#each types}}
    {{#if items}}
      {{#if items.length}}
          <optgroup label="{{name}}">
            {{#each items}}
              {{#if name}}
                  <option data-singular="{{singular}}"
                          data-plural="{{plural}}"
                          value="{{value}}"
                          label="{{name}}"></option>
              {{/if}}
            {{/each}}
          </optgroup>
      {{/if}}
    {{else}}
      {{#if name}}
          <option data-singular="{{singular}}" data-plural="{{plural}}" value="{{value}}" label="{{name}}"></option>
      {{/if}}
    {{/if}}
  {{/each}}
</select>
