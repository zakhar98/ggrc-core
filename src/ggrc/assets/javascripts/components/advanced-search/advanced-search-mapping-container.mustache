<div class="mapping-container">
  <div class="mapping-container__content">
    {{#each items}}
      {{#switch type}}
        {{#case "operator"}}
        <div class="mapping-container__operator">
          <advanced-search-filter-operator
            {(operator)}="value">
          </advanced-search-filter-operator>
        </div>
        {{/case}}
        {{#case "mappingCriteria"}}
        <div class="mapping-container__criteria">
          <advanced-search-mapping-criteria
            {(criteria)}="value"
            (remove)="removeItem(../)"
            {model-name}="modelName"
            {root}="true"
            {extendable}="true"
            (createGroup)="createGroup(../)">
          </advanced-search-mapping-criteria>
        </div>
        {{/case}}
        {{#case "group"}}
        <div class="mapping-container__group">
          <advanced-search-mapping-group
            {(items)}="value"
            (remove)="removeItem(../)"
            {model-name}="modelName"
            {root}="true">
          </advanced-search-mapping-group>
        </div>
        {{/case}}
      {{/switch}}
    {{/each}}
  </div>
  {{#if showAddButton}}
  <div class="mapping-container__footer">
    <div>
      <button class="btn btn-small btn-white" ($click)="addMappingCriteria()">Add Mapping Filter</button>
    </div>
  </div>
  {{/if}}
</div>






